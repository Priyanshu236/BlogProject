<%- include('partials/header'); %>

      <div class = "banner">
        <div class = "container">
          <h1 class = "banner-title">
            <span>Create,</span> Your Own Blog
          </h1>
       
          <form method="post" action="post/search">
            <input type = "text" name="text" class = "search-input" placeholder="find your interest . . .">
            <button type = "submit" class = "search-btn">
              <i class = "fas fa-search"></i>
            </button>
          </form>
        </div>
      </div>
    <!-- end of header -->
    
    <!-- design -->
    <section class = "design" id = "design">
      <div class = "container">
        <div class = "title">
          <h2>Recent Blogs & Content</h2>
          <p>recent blogs & their contents.</p>
          <!--<p>Enjoy reading.</p> -->
          
        </div>

        <div class = "design-content">
          <!-- item -->
          <%blogs.forEach((blog)=>{%>
          <div class = "design-item">
            <a href="post/<%=blog._id%>">

              <div class = "design-img">
                
                <img src = "uploads/<%=blog.image%>" alt = "">
                
                <span><i class = "far fa-heart"></i> 22</span>
                <span>iBlogs</span>
              </div>
              <div class = "design-title">
                <a href = "post/<%=blog._id%>"><%=blog.title%></a>
              </div>
            </a>
          </div>
          <!-- end of item -->
          <%})%>
        </div>
      </div>
    </section>
    <!-- end of design -->


    <!-- blog -->
    <section class = "blog" id = "blog">
      <div class = "container">
        <div class = "title">
          <h2>Top Blogs</h2>
          <p>top blogs & their content</p>
        </div>
        <div class = "blog-content">
          <!-- item -->
          <%blogs.forEach((blog)=>{%>
          <div class = "blog-item">
            <div class = "blog-img">
              <img src = "uploads/<%=blog.image%>" alt = "">
              <span><i class = "far fa-heart"></i></span>
            </div>
            <div class = "blog-text">
              <span><%=blog.createdAt.toJSON().slice(0,10)%></span>
              <h2><%=blog.title%></h2>
              <p><%=blog.desc%></p>
              <a href = "post/<%=blog._id%>">Read More</a>
            </div>
          </div>
          <%})%>
        </div>
      </div>
    </section>
    <!-- end of blog -->


   <%- include("partials/footer"); %>